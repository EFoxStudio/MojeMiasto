<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MojeMiasto.Views.NewQuestPage">
    <ContentPage.Content>
        <StackLayout>

            <Entry Text="{Binding Name, Mode=TwoWay}" Placeholder="Nazwa" ClearButtonVisibility="WhileEditing"/>
            <Entry Text="{Binding Description, Mode=TwoWay}" Placeholder="Opis" ClearButtonVisibility="WhileEditing"/>
            <Label Text="Czy miasto?"/>
            <CheckBox CheckedChanged="OnCheck" IsChecked="false"/>
            <Label x:Name="resultLabel"/>

            <Label Text="Data rozpoczęcia:" />
            <DatePicker x:Name="startDatePicker" Format="D" DateSelected="OnDateSelected" />

            <Label Text="End Date:" />
            <DatePicker x:Name="endDatePicker" MinimumDate="{Binding Source={x:Reference startDatePicker},Path=Date}" Format="D" DateSelected="OnDateSelected" />

            <Label Text="{Binding Error}"/>
            <Button Command="{Binding SubmitCommand}" Text="Dodaj"/>

            <Label Text="Welcome to add new quest page!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>